<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'>
    <m:MaterialPanel>
        <m:MaterialNavBar>
            <m:MaterialNavBrand float="LEFT" text="LAS Admin Interface"/>
        </m:MaterialNavBar>
        <m:MaterialCard>
            <m:MaterialCardContent>
                <m:MaterialCardTitle fontWeight="BOLDER" fontSize="1.4em" text="Add Data to this LAS"></m:MaterialCardTitle>
                <m:MaterialRow grid="s12">
                    <m:MaterialColumn grid="s6">
                        <m:MaterialRow>
                            <m:MaterialLabel fontSize="1.2em" fontWeight="BOLD" text="Add a single OPeNDAP URL or netCDF File:"></m:MaterialLabel>
                            <m:MaterialTextBox placeholder="Filename or URL"></m:MaterialTextBox>
                        </m:MaterialRow>
                        <m:MaterialRow>
                            <m:MaterialLabel fontSize="1.2em" fontWeight="BOLD" text="Add a single ERDDAP Discrete Geometry Data set:"></m:MaterialLabel>
                            <m:MaterialTextBox placeholder="Filename or URL"></m:MaterialTextBox>
                        </m:MaterialRow>
                        <m:MaterialRow>
                            <m:MaterialLabel fontSize="1.2em" fontWeight="BOLD" text="Add an entire THREDDS catalog:"></m:MaterialLabel>
                            <m:MaterialTextBox placeholder="THREDDS Catalog URL"></m:MaterialTextBox>
                        </m:MaterialRow>
                        <m:MaterialRow>
                            <m:MaterialLabel fontSize="1.2em" fontWeight="BOLD" text="Add an ERDDAP TableDAP server:"></m:MaterialLabel>
                            <m:MaterialTextBox placeholder="THREDDS Catalog URL"></m:MaterialTextBox>
                        </m:MaterialRow>
                    </m:MaterialColumn>
                    <m:MaterialColumn grid="s6">
                        <m:MaterialLabel fontSize="1.2em"  text="Select a data set in the hierarchy to contain the new data set. (The top level site is the default.)"></m:MaterialLabel>
                        <m:MaterialCollection ui:field="datasets">
                            <m:MaterialCollectionItem>
                                <m:MaterialPanel addStyleNames="valign-wrapper">
                                    <m:MaterialLink marginLeft="8" display="FLEX"
                                                    text="This is a Data Set Title that is rediculously long compare to the space available for it's display"></m:MaterialLink>
                                    <m:MaterialIcon iconPosition="RIGHT" iconType="INFO" display="FLEX"
                                                    marginRight="4"></m:MaterialIcon>
                                </m:MaterialPanel>
                            </m:MaterialCollectionItem>
                        </m:MaterialCollection>
                    </m:MaterialColumn>
                </m:MaterialRow>
            </m:MaterialCardContent>
            <m:MaterialCardAction>
                <m:MaterialButton text="Submit"></m:MaterialButton>
            </m:MaterialCardAction>
        </m:MaterialCard>
        <m:MaterialCard>
            <m:MaterialCardContent>
                <m:MaterialCardTitle fontWeight="BOLDER" fontSize="1.4em" text="Edit Data sets and Variables in this LAS"></m:MaterialCardTitle>
                <m:MaterialLabel fontSize="1.2em" text="Use the selector below to navigate to the item you need to edit. Then push the pencil icon to edit that item."></m:MaterialLabel>
                <m:MaterialRow grid="s12">
                    <m:MaterialColumn grid="s6">
                        <m:MaterialCollection ui:field="editDataset">
                            <m:MaterialCollectionItem>
                                <m:MaterialPanel addStyleNames="valign-wrapper">
                                    <m:MaterialLink marginLeft="8" display="FLEX"
                                                    text="This is a Data Set Title that is rediculously long compare to the space available for it's display"></m:MaterialLink>
                                    <m:MaterialIcon iconPosition="RIGHT" iconType="INFO" display="FLEX"
                                                    marginRight="4"></m:MaterialIcon>
                                </m:MaterialPanel>
                            </m:MaterialCollectionItem>
                        </m:MaterialCollection>
                    </m:MaterialColumn>
                </m:MaterialRow>
            </m:MaterialCardContent>
        </m:MaterialCard>
    </m:MaterialPanel>
</ui:UiBinder>
