<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b3="urn:import:org.gwtbootstrap3.extras.slider.client.ui"
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
             xmlns:las="urn:import:pmel.sdig.las.client.widget">
    <g:HTMLPanel>
        <!-- N.B. The btn-block style has to be applied to both the group and the button for it to work. -->
        <b:ButtonGroup addStyleNames="btn-block">
            <b:Button addStyleNames="btn-block" ui:field="button" dataToggle="DROPDOWN" type="PRIMARY" toggleCaret="true" ></b:Button>
            <b:DropDownMenu ui:field="menu">
            </b:DropDownMenu>
        </b:ButtonGroup>
    </g:HTMLPanel>
</ui:UiBinder>