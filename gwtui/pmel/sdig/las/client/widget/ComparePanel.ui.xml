<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:las="urn:import:pmel.sdig.las.client.widget">
    <m:MaterialColumn ui:field="panel" grid="s10" paddingLeft="2" paddingRight="8">
        <m:MaterialCollapsible ui:field="annotationsCollapse">
            <m:MaterialCollapsibleItem>
                <m:MaterialCollapsibleHeader ui:field="breadcrumbs" paddingLeft="8" paddingBottom="0" marginBottom="0">
                    <!--
                        <m:MaterialIcon visibility="HIDDEN" display="INLINE" iconType="SETTINGS" iconColor="BLUE" iconPosition="LEFT"></m:MaterialIcon>
                    -->
                        <m:MaterialIcon display="INLINE" iconType="ADD" iconColor="BLUE" iconPosition="RIGHT"></m:MaterialIcon>
                </m:MaterialCollapsibleHeader>
                <m:MaterialCollapsibleBody ui:field="annotations" backgroundColor="WHITE" paddingTop="0" paddingLeft="0" paddingRight="0">
                    <m:MaterialPanel marginTop="8" paddingLeft="8" ui:field="annotationPanel" m:id="annotations"  textAlign="LEFT" overflow="AUTO">
                    </m:MaterialPanel>
                </m:MaterialCollapsibleBody>
            </m:MaterialCollapsibleItem>


        </m:MaterialCollapsible>

        <las:OutputPanel ui:field="outputPanel"></las:OutputPanel>

        <m:html.Div visible="false" ui:field="chart"/>


        <ma:window.MaterialWindow ui:field="window" title="Data Set and Axes Controls">
            <m:MaterialModalContent>
            <m:MaterialColumn grid="s12">
                <m:MaterialCollapsible>
                    <m:MaterialCollapsibleItem active="true" ui:field="dataItem">
                        <m:MaterialCollapsibleHeader>
                            <las:Breadcrumb ui:field="home" iconType="HOME" text=""></las:Breadcrumb>
                            <m:MaterialLink fontSize="1.4em" fontWeight="BOLDER" text="Data"></m:MaterialLink>
                            <m:MaterialIcon ui:field="back" paddingTop="2" iconColor="BLUE" iconPosition="RIGHT" iconType="ARROW_BACK"/>
                        </m:MaterialCollapsibleHeader>
                        <m:MaterialCollapsibleBody padding="0">
                            <m:MaterialCollection width="250" ui:field="datasets"/>
                        </m:MaterialCollapsibleBody>
                    </m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleItem>
                        <m:MaterialCollapsibleHeader>
                            <m:MaterialLink fontSize="1.4em" fontWeight="BOLDER" text="Axes and Differences"></m:MaterialLink>
                        </m:MaterialCollapsibleHeader>
                        <m:MaterialCollapsibleBody padding="0">
                            <m:MaterialPanel m:id="timeRegion" padding="2" overflow="HIDDEN" width="375px">
                                <m:MaterialPanel padding="8" ui:field="mapPanel"></m:MaterialPanel>
                                <m:MaterialPanel padding="8" ui:field="dateTimePanel" width="375px" grid="s12"></m:MaterialPanel>
                                <m:MaterialPanel padding="8" ui:field="zaxisPanel" grid="s12"/>
                            </m:MaterialPanel>
                            <m:MaterialPanel lineHeight="32" marginBottom="8" textAlign="LEFT" overflow="AUTO">

                                <m:MaterialLabel paddingBottom="8" paddingLeft="8" paddingTop="8" fontSize="1.4em" fontWeight="BOLDER" textColor="BLUE" text="Compute Difference"></m:MaterialLabel>
                                <m:MaterialSwitch verticalAlign="MIDDLE" ui:field="difference" display="INLINE" paddingBottom="8" paddingLeft="8" paddingRight="8" title="Turn on difference calculation when viewing multiple plots." onLabel="Difference On" offLabel="Difference Off" enabled="false" value="false" />

                                <!--

                                For now, make the switcing on of the difference computation specific to each panel
                                In the future, perhaps computations can be done for each panel

                                <m:MaterialLabel paddingBottom="16" paddingLeft="8" paddingTop="8" fontSize="1.4em" fontWeight="BOLDER" textColor="BLUE" text="Apply Same Analysis as First Panel"></m:MaterialLabel>
                                <m:MaterialSwitch verticalAlign="MIDDLE" ui:field="difference" display="INLINE" paddingBottom="8" paddingLeft="8" paddingRight="8" title="Apply the same analysis transformation to this panel as the first panel." onLabel="Apply On" offLabel="Apply Off" enabled="true" value="false" />


                                <m:MaterialLabel paddingBottom="16" paddingLeft="8" fontSize="1.4em" fontWeight="BOLDER" textColor="BLUE" text="Do Analysis"></m:MaterialLabel>
                                <m:MaterialSwitch verticalAlign="MIDDLE" ui:field="analysisSwitch" display="INLINE" paddingLeft="8" paddingRight="8" title="Apply an analysis transformation to this panel." onLabel="Analysis On" offLabel="Analysis Off" enabled="true" value="false" />

                                <m:MaterialButton paddingBottom="8" ui:field="analysisButton" text="Compute" activates="analysis" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" backgroundColor="BLUE" textColor="WHITE"></m:MaterialButton>
                                <m:MaterialDropDown ui:field="analysis" activator="analysis" backgroundColor="WHITE">
                                    <m:MaterialLink text="Average" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Minimum" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Maximum" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Sum" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Variance" backgroundColor="BLUE" textColor="WHITE"/>
                                </m:MaterialDropDown>
                                <m:MaterialButton ui:field="overButton" text="Over" activates="over" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" backgroundColor="BLUE" textColor="WHITE"></m:MaterialButton>
                                <m:MaterialDropDown ui:field="over" activator="over" backgroundColor="WHITE">
                                    <m:MaterialLink text="Area" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Longitude" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Latitude" backgroundColor="BLUE" textColor="WHITE"/>
                                    <m:MaterialLink text="Time" backgroundColor="BLUE" textColor="WHITE"/>
                                </m:MaterialDropDown>
                             En of future panel specific analysis controls
                            -->
                            </m:MaterialPanel>
                        </m:MaterialCollapsibleBody>
                    </m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleItem>
                        <m:MaterialCollapsibleHeader>
                            <m:MaterialLink fontSize="1.4em" fontWeight="BOLDER" text="Analysis"></m:MaterialLink>
                        </m:MaterialCollapsibleHeader>
                        <m:MaterialCollapsibleBody padding="0">

                        </m:MaterialCollapsibleBody>
                    </m:MaterialCollapsibleItem>
                </m:MaterialCollapsible>
            </m:MaterialColumn>
            </m:MaterialModalContent>
        </ma:window.MaterialWindow>

    </m:MaterialColumn>

</ui:UiBinder>
