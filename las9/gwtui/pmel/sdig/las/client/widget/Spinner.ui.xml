<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
        border: 4px solid darkblue;
        background: #FFFFFF;
        padding: 10px;
        position: fixed;
        top: 200px;
        left: 600px;
        height: 120px;
        width: 420px;
        z-index: 10;
	}
	</ui:style>
	<g:HTMLPanel>
	<div class="row {style.important}">
		<g:HTMLPanel addStyleNames="col-sm-3 col-md-3">
		    <img src="images/rainbow.gif" alt="Spinning GIF"></img>
	    </g:HTMLPanel>
	    <g:HTMLPanel addStyleNames="col-sm-9 col-md-9">
	        <g:HTMLPanel ui:field="message" addStyleNames="inline-center"></g:HTMLPanel>
	    </g:HTMLPanel>
	</div>
	</g:HTMLPanel>
</ui:UiBinder>